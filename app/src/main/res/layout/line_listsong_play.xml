<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/cardviewhinhbaihatlistplay"
        app:cardCornerRadius="6dp"
        android:elevation="10dp"
        >
    <ImageView
        android:id="@+id/imageviewhinhbaihatlistplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textviewtenbaihatlistplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:text="@string/songname"
        android:layout_marginTop="7.5dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/cardviewhinhbaihatlistplay"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textviewtencasilistplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:text="@string/singername"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/cardviewhinhbaihatlistplay"
        android:layout_below="@id/textviewtenbaihatlistplay"/>
    </RelativeLayout>

</RelativeLayout>