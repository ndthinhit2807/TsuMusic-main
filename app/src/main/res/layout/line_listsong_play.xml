<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewhinhbaihatlistplay"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/imageviewhinhbaihatlistplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/custom_background_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textviewtenbaihatlistplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7.5dp"
            android:layout_toRightOf="@+id/cardviewhinhbaihatlistplay"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:text="@string/songname"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textviewtencasilistplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewtenbaihatlistplay"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/cardviewhinhbaihatlistplay"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxWidth="250dp"
            android:text="@string/singername"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>