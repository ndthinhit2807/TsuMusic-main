<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_2"
    android:orientation="vertical"
    tools:context=".Activity.SonginfoActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/songinfo"
        android:textAllCaps="true"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tenbaihatinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/songname"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textviewtenbaihatdangnghe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39.5dp"
            android:layout_toRightOf="@+id/tenbaihatinfo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Yêu Đơn Phương"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tennghesiinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenbaihatinfo"
            android:layout_marginTop="20dp"
            android:text="Tên Nghệ Sĩ"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textviewtennghesihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenbaihatinfo"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tennghesiinfo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Only C"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/luotnghe"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewtennghesihat"
            android:layout_marginTop="20dp"
            android:text="Lượt nghe"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textviewluotnghebaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewtennghesihat"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/luotnghe"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1M"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ngayphathanh"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewluotnghebaihat"
            android:layout_marginTop="20dp"
            android:text="Ngày PH"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textviewngayphathanhbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewluotnghebaihat"
            android:layout_marginLeft="58.5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ngayphathanh"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="24-05-2021"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backbuttonsonginfo"
            style="@style/ButtonStyle36"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/ic_down_arrow" />
    </RelativeLayout>

</LinearLayout>
