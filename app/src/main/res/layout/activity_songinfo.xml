<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_2"
    android:orientation="vertical"
    tools:context=".Activity.SonginfoActivity">



<TextView
    android:layout_width="match_parent"
    android:text="Thông tin bài hát"
    android:layout_marginTop="20dp"
    android:textSize="25sp"
    android:gravity="center"
    android:textStyle="bold"
    android:layout_height="wrap_content"/>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_marginTop="30dp"

       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="16sp"
           android:id="@+id/tenbaihatinfo"
           android:text="Tên Bài Hát"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="16sp"
           android:layout_marginLeft="39.5dp"
           android:id="@+id/textviewtenbaihatdangnghe"
           android:layout_toRightOf="@+id/tenbaihatinfo"
           android:text="Yêu Đơn Phương"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="16sp"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/tenbaihatinfo"
           android:id="@+id/tennghesiinfo"
           android:text="Tên Nghệ Sĩ"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textSize="16sp"
           android:id="@+id/textviewtennghesihat"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/tenbaihatinfo"
           android:layout_marginLeft="36dp"
           android:layout_toRightOf="@+id/tennghesiinfo"
           android:text="Only C"/>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textSize="16sp"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/textviewtennghesihat"
           android:id="@+id/luotnghe"
           android:text="Lượt nghe"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textSize="16sp"
           android:id="@+id/textviewluotnghebaihat"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/textviewtennghesihat"
           android:layout_marginLeft="49dp"
           android:layout_toRightOf="@+id/luotnghe"
           android:text="1M"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textSize="16sp"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/textviewluotnghebaihat"
           android:id="@+id/ngayphathanh"
           android:text="Ngày PH"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textSize="16sp"
           android:id="@+id/textviewngayphathanhbaihat"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/textviewluotnghebaihat"
           android:layout_marginLeft="58.5dp"
           android:layout_toRightOf="@+id/ngayphathanh"
           android:text="24-05-2021"/>
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/backbuttonsonginfo"
        style="@style/ButtonStyle36"
        android:layout_width="37dp"
        android:layout_height="37dp"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:src="@drawable/ic_down_arrow"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
