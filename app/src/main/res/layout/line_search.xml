<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:id="@+id/cardviewsearchhinhanh"
        android:scaleType="fitXY"
        android:layout_height="60dp"
        android:elevation="10dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/imageviewsearchhinhanh"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_primary" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/cardviewsearchhinhanh"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:id="@+id/textviewsearchdong1"
        android:textSize="16sp"
        android:singleLine="true"
        android:maxWidth="250dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+id/textviewsearchdong2"
        android:layout_toRightOf="@+id/cardviewsearchhinhanh"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textviewsearchdong1"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true"
        android:maxWidth="250dp"/>

    <ImageView
        android:id="@+id/search_song_addplaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="-6dp"
        android:src="@drawable/addlist"
        android:layout_margin="10dp"/>

</RelativeLayout>