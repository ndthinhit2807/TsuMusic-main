<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Thêm Playlist"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_add_playlist">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_dialog"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_dialog_nameplaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Tên Playlist"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <EditText
            android:id="@+id/edittext_dialog_nameplaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_dialog_nameplaylist"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp">

        </EditText>

        <TextView
            android:id="@+id/text_dialog_descriptionplaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_dialog_nameplaylist"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Mô tả"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <EditText
            android:id="@+id/edittext_dialog_decriptionpaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_dialog_descriptionplaylist"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_dialog_decriptionpaylist"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_dialog_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="40dp"
                android:text="Thoát">

            </Button>

            <Button
                android:id="@+id/btn_dialog_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"


                >

            </Button>

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>