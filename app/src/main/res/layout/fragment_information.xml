<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_2"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/transparent"
      >




        <Button
            android:id="@+id/sigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/dangnhap"
            android:background="@color/transparent"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:textAllCaps="true"/>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/LinearLayoutdanhsachbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
          >

            <ImageView
                android:id="@+id/imageviewdanhsachbaihat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:src="@drawable/ic_library_music" />

            <Button
                android:background="@color/transparent"
                android:id="@+id/information_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0.8dp"
                android:layout_toRightOf="@+id/imageviewdanhsachbaihat"
                android:text="Danh sách bài hát"
                android:textSize="20dp"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutthongtincanhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutdanhsachbaihat"

            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/imageviewthongtincanhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:layout_marginTop="14dp"/>

            <Button
                android:background="@color/transparent"
                android:id="@+id/information_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0.8dp"
                android:layout_toRightOf="@+id/imageviewthongtincanhan"
                android:text="Thông tin cá nhân"
                android:textSize="20dp"
                android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayoutdoimatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutthongtincanhan"

            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/imageviewdoimatkhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                android:layout_marginTop="14dp"/>

            <Button
                android:background="@color/transparent"
                android:id="@+id/information_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0.8dp"
                android:layout_toRightOf="@+id/imageviewdoimatkhau"
                android:text="Đổi mật khẩu"
                android:textSize="20dp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutthongtinungdung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutdoimatkhau"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/imageviewthongtinungdung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_marginTop="14dp"/>

            <Button
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:id="@+id/btninformationapp"
                android:layout_toRightOf="@+id/imageviewthongtinungdung"
                android:text="Thông tin ứng dụng"
                android:textSize="20dp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayouthuongdansudung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutthongtinungdung"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/imageviewhuongdansudung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user_manual"
                android:layout_marginTop="14dp"/>

            <Button
                android:background="@color/transparent"
                android:id="@+id/tuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0.8dp"
                android:layout_toRightOf="@+id/imageviewhuongdansudung"
                android:text="Hướng dẫn sử dụng"
                android:textSize="20dp"
                android:textAllCaps="false"/>


        </LinearLayout>


        <Button
            android:layout_centerHorizontal="true"

            android:visibility="invisible"
            android:id="@+id/sigout"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="400dp"
            android:background="@color/transparent"
            android:text="@string/ng_xu_t_t_i_kho_n"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:textAllCaps="true"/>


    </RelativeLayout>



</LinearLayout>
