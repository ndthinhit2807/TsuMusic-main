<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">7sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#9A9796</item>
        <item name="android:progressTint">@color/purple_primary</item>
        <item name="android:colorControlActivated">@color/purple_primary</item>
    </style>
    <style name="ButtonStyleBase">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/icon_desc</item>
    </style>
    <style name="ButtonStyle36" parent="ButtonStyleBase">
        <item name="android:padding">6dp</item>
    </style>

</resources>